@model VentaApp.Web.Models.Product.ProductDetailViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Product API</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductoID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductoID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="myForm">
        <input type="hidden"  asp-for="ProductoID" />
        <input type="submit" value="Delete" class="btn btn-danger" id="btn-delete" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<script>

    const btnDelete = document.getElementById('btn-delete');

    btnDelete.addEventListener('click', (e) => {
        e.preventDefault();

        if (confirm("Desea eliminar este prodcuto"))
            var myForm = document.getElementById('myForm').submit();
        else
            return null;
    });

</script>
